#in asp.net web form add new web form
#design
<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <title></title>
    <style type="text/css">
        .auto-style1 {
            width: 100%;
        }
        .auto-style2 {
            text-align: center;
        }
    </style>
</head>
<body>
    <form id="form1" runat="server">
        <div>
            <table class="auto-style1">
                <tr>
                    <td class="auto-style2" style="background-color: #FF0000; font-size: large; color: #FFFFFF;">Ad content rotator using asp.net</td>
                </tr>
                <tr>
                    <td class="auto-style2" style="font-size: large">
                        <asp:AdRotator ID="AdRotator1" runat="server" Height="350px" AdvertisementFile="~/XMLFile1.xml" />
                    </td>
                </tr>
                <tr>
                    <td>&nbsp;</td>
                </tr>
            </table>
        </div>
    </form>
</body>
</html>





